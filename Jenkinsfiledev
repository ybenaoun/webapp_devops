pipeline {
    agent any

    triggers {
        pollSCM('H/2 * * * *')
    }

    stages {
        stage('Checkout') {
            steps { checkout scm }
        }

        stage('Setup') {
            steps { bat 'echo Preparing dev environment' }
        }

        stage('Build') {
            steps { bat 'echo Static build finished' }
        }

        stage('Run Docker') {
            steps {
                bat 'docker build -t webapp-dev .'
                bat 'docker run -d --name webapp-dev -p 8081:80 webapp-dev'
            }
        }

        stage('Smoke Test') {
            steps {
                bat 'timeout /t 3 >nul'
                bat 'curl -f http://localhost:8081'
            }
        }

        stage('Archive') {
            steps {
                archiveArtifacts artifacts: '**/*', fingerprint: true
            }
        }
    }

    post {
        always {
            bat 'docker rm -f webapp-dev || exit 0'
        }
    }
}
