pipeline {
    agent any
    environment{
        IMAGE="ybenaoun/webapp-release"
        TAG="build-${env.BUILD_NUMBER}"

    }
   
    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Setup') {
            steps {
                bat """
                  echo === Preparing Release Build ===
                  docker --version
                  echo Docker is available.
                  echo Environment ready.
                """
            }
        }


        stage('Build') {
            steps { bat 'echo Building release version' }
        }

        stage('Run Docker') {
            steps {
                bat "docker build -t webapp-release ."
            }
        }

        stage('Smoke Test') {
            steps {
                bat "docker run -d --name webapp-release -p 8084:80 webapp-release"
                bat "curl -f http://localhost:8084"
            }
        }

        stage('Archive Artifacts') {
            steps {
                //archiveArtifacts artifacts: 'build-log.txt'
                bat "docker save webapp-release -o webapp-release.tar"
                archiveArtifacts artifacts: "webapp-release.tar"
            }
        }
    }

    post {
        always {
            bat 'docker rm -f webapp-release || exit 0'
        }
    }
}
