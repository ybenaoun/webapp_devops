pipeline {
    agent any

    environment {
        IMAGE="ybenaoun/webapp"
        TAG= "build-${env.BUILD_NUMBER}"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Setup') {
            steps {
                bat 'echo No dependencies needed for static web project'
            }
        }

        stage('Build') {
            steps {
                bat 'echo Build simulated for HTML/CSS/JS'
            }
        }

        stage('Run Docker') {
            steps {
                bat 'docker build -t webapp-pr .'
                bat 'docker run -d --name webapp-pr -p 8082:80 webapp-pr'
            }
        }

        stage('Smoke Test') {
            steps {
                bat """
                docker rm -f webapp_test 2>nul || ver > nul
                docker run -d --name webapp_test -p 8081:80 %IMAGE%:%TAG%
                ping -n 3 127.0.0.1 > nul
                curl -I http://localhost:8082 | find "200 OK"
                docker rm -f webapp_test
                """
            }
        }

        stage('Archive') {
            steps {
                archiveArtifacts artifacts: 'Dockerfile'
            }
        }
    }

    post {
        always {
            bat 'docker rm -f webapp-pr || exit 0'
        }
    }
}
